---
import { data } from "./data";

const { title, text } = data;
---

<div class="coords" data-text>
  <h2 class="coords__title">{title}</h2>
  <div class="coords__data" data-coord>
    <span> Координаты для браслета:</span>
    <span class="coords__data-number" data-coord-n></span>
    <span class="coords__data-number" data-coord-e></span>
  </div>
  <div class="coords__wrap">
    <textarea
      id="locationInput"
      class="coords__input"
      placeholder={text}
      data-input-text={"coords"}
      name={"coords"}></textarea>
    <button id="searchButton"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        x="0px"
        y="0px"
        width="100"
        height="100"
        viewBox="0 0 30 30"
      >
        <path
          d="M 13 3 C 7.4889971 3 3 7.4889971 3 13 C 3 18.511003 7.4889971 23 13 23 C 15.396508 23 17.597385 22.148986 19.322266 20.736328 L 25.292969 26.707031 A 1.0001 1.0001 0 1 0 26.707031 25.292969 L 20.736328 19.322266 C 22.148986 17.597385 23 15.396508 23 13 C 23 7.4889971 18.511003 3 13 3 z M 13 5 C 17.430123 5 21 8.5698774 21 13 C 21 17.430123 17.430123 21 13 21 C 8.5698774 21 5 17.430123 5 13 C 5 8.5698774 8.5698774 5 13 5 z"
          fill="rgb(235, 80, 62)"></path>
      </svg>
    </button>
  </div>
  <div class="coords__map" id="map"></div>
  <div class="coords__map-loading">
    <p class="coords__map-text">Загрузка карты</p>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="#000000"
      width="800px"
      height="800px"
      viewBox="0 0 256 256"
      class="coords__map-icon"
    >
      <path
        d="M199.99975,228H139.72143a263.72805,263.72805,0,0,0,31.29688-30.375c26.81054-30.832,40.98144-63.207,40.98144-93.625a84,84,0,0,0-168,0c0,30.418,14.1709,62.793,40.98145,93.625A263.7281,263.7281,0,0,0,116.27807,228H55.99975a4,4,0,0,0,0,8h144a4,4,0,0,0,0-8ZM90.89624,192.23437C73.1521,171.79541,51.99975,139.89648,51.99975,104a76,76,0,0,1,152,0c0,35.89648-21.15234,67.79541-38.89648,88.23437a254.03965,254.03965,0,0,1-37.10352,34.80079A254.04027,254.04027,0,0,1,90.89624,192.23437ZM163.99975,104a36,36,0,1,0-36,36A36.04061,36.04061,0,0,0,163.99975,104Zm-64,0a28,28,0,1,1,28,28A28.03146,28.03146,0,0,1,99.99975,104Z"
        fill="#eb503e"></path>
    </svg>
  </div>
</div>
<style lang="scss">
  @import "../styles/settings";

  .coords {
    position: relative;
    width: 100%;

    &:not(.show) {
      display: none;
    }

    @include des {
      margin-bottom: d(24);
    }

    @include mob {
      margin-bottom: m(30);
    }

    &__title {
      color: #241f1f;
      font-weight: 500;
      line-height: 130%;

      @include des {
        margin-bottom: d(12);
        font-size: d(18);
        letter-spacing: d(-0.54);
      }

      @include mob {
        margin-bottom: m(12);
        font-size: m(15);
        letter-spacing: m(-0.45);
      }
    }

    &__wrap {
      position: relative;

      @include des {
        margin-bottom: d(30);
      }

      @include mob {
        margin-bottom: m(30);
      }

      &::after {
        content: "Введите адресс";
        position: absolute;
        color: red;
        @include easy(all);

        opacity: 0;
        visibility: hidden;

        @include des {
          font-size: d(12);
          left: d(2);
          bottom: d(-12);
        }

        @include mob {
          font-size: m(10);
          left: m(2);
          bottom: m(-10);
        }
      }

      .error &::after {
        opacity: 1;
        visibility: visible;
      }

      & button {
        position: absolute;
        background-color: transparent;

        & svg {
          width: 100%;
          height: 100%;
          @include easy(transform);
        }

        &:is(:hover) {
          & svg {
            transform: scale(1.1);
            cursor: pointer;
          }
        }

        @include des {
          top: d(22);
          right: d(22);
          width: d(24);
          height: d(24);
        }

        @include mob {
          top: m(14);
          right: m(14);
          width: m(16);
          height: m(16);
        }
      }
    }

    &__input {
      resize: none;
      width: 100%;
      border-style: solid;
      border-color: #e7e4e4;
      background-color: #fff;

      color: #6b6663;

      font-weight: 500;
      line-height: 130%;
      font-family: inherit;

      @include easy(border-color);

      @include des {
        border-width: d(1);
        border-radius: d(18);
        height: d(80);
        padding: d(22) d(54) d(22) d(22);
        font-size: d(14);
      }

      @include mob {
        border-width: m(1);
        border-radius: m(12);
        height: m(52);
        padding: m(12) m(36) m(12) m(12);
        font-size: 16px;
      }

      .error & {
        border-color: red;
      }
    }

    &__map {
      position: relative;
      width: 100%;

      @include des {
        border-radius: d(18);
        height: d(218);
      }

      @include mob {
        border-radius: m(12);
        height: m(300);
      }

      &:empty + .coords__map-loading {
        opacity: 1;
      }

      &-loading {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        bottom: 0;
        width: 100%;
        background-color: #fff;
        border-color: #ebc2bd;
        border-style: solid;
        pointer-events: none;

        display: flex;
        flex-direction: column-reverse;
        align-items: center;
        justify-content: center;
        opacity: 0;
        @include easy(opacity);

        @include des {
          border-radius: d(18);
          height: d(218);
          border-width: d(1);
        }

        @include mob {
          border-radius: m(12);
          height: m(300);
          border-width: m(1);
        }
      }

      &-text {
        color: #eb503e;

        @include des {
          font-size: d(12);
          margin-top: d(10);
        }

        @include mob {
          font-size: m(10);
          margin-top: m(4);
        }
      }

      &-icon {
        height: auto;
        transform-origin: bottom center;

        @include des {
          width: d(40);
        }

        @include mob {
          width: m(30);
        }

        animation: mapLoading 1s ease 0s alternate infinite;
      }
    }

    &__data {
      display: flex;

      &:not(.show) {
        display: none;
      }

      @include des {
        font-size: d(14);
        margin-bottom: d(12);
        grid-gap: d(6);
        align-items: center;
      }

      @include mob {
        font-size: m(12);
        margin-bottom: m(12);
        grid-gap: m(6);
        flex-direction: column;
      }

      & span:first-of-type {
        color: #6b6663;
        font-weight: 500;

        @include des {
        }

        @include mob {
          margin-bottom: m(6);
        }
      }

      &-number {
        color: #6b6663;
        font-weight: 400;

        @include des {
          line-height: 130%;
        }

        @include mob {
          line-height: 90%;
          padding-left: m(6);
        }
      }
    }
  }

  @keyframes mapLoading {
    0% {
      transform: scale(0.6);
    }
    100% {
      transform: scale(1);
    }
  }
</style>
